<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ClipboardManager.App.ViewModels"
        xmlns:controls="using:ClipboardManager.App.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="ClipboardManager.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.png"
        Title="Clipboard Manager"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        TransparencyLevelHint="Blur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Border CornerRadius="12" 
            BorderThickness="2" 
            BorderBrush="#4A9B9B"
            ClipToBounds="True">
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Search Bar -->
            <Border Grid.Row="0" Background="#1A2B2B" Padding="10" CornerRadius="12,12,0,0">
                <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto">
                    <TextBox Grid.Column="0" Grid.Row="0"
                             Text="{Binding SearchQuery}"
                             Watermark="Buscar en historial... (Enter o Q)"
                             FontSize="13"
                             Padding="8"
                             Background="#1E3333"
                             Foreground="#E0E0E0"
                             BorderBrush="#2D4D4D"
                             KeyDown="OnSearchKeyDown"/>
                    <Button Grid.Column="1" Grid.Row="0"
                            Content="ðŸ”"
                            Click="OnSearchClick"
                            Margin="5,0,0,0"
                            Width="35"
                            Background="#1E3333"
                            BorderBrush="#2D4D4D"/>
                    <Button Grid.Column="2" Grid.Row="0"
                            Content="ðŸ—‘ï¸"
                            Click="OnClearAllClick"
                            Margin="5,0,0,0"
                            Width="35"
                            Background="#1E3333"
                            BorderBrush="#2D4D4D"
                            ToolTip.Tip="Limpiar todo el historial"/>
                </Grid>
            </Border>

            <!-- Items List -->
            <Border Grid.Row="1" Background="#1A2B2B" Padding="5">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E3333"
                                        Margin="5"
                                        Padding="10"
                                        CornerRadius="6"
                                        BorderBrush="#2D4D4D"
                                        BorderThickness="1"
                                        Cursor="Hand"
                                        PointerPressed="OnItemPressed">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <!-- Content Preview -->
                                        <Grid Grid.Row="0" Grid.Column="0">
                                            <!-- CÃ³digo con syntax highlighting -->
                                            <Grid>
                                                <Grid.IsVisible>
                                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                        <Binding Path="IsCode"/>
                                                        <Binding Path="CodeContent" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                                    </MultiBinding>
                                                </Grid.IsVisible>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Border Grid.Row="0"
                                                       Background="#1A2B2B"
                                                       Padding="6,3"
                                                       CornerRadius="4,4,0,0">
                                                    <TextBlock Text="{Binding CodeLanguage, FallbackValue='Code'}"
                                                              FontSize="10"
                                                              Foreground="#A0A0A0"
                                                              FontFamily="Cascadia Code,Consolas,Courier New,monospace"/>
                                                </Border>
                                                
                                                <controls:CodePreviewControl Grid.Row="1"
                                                                            Code="{Binding CodeContent}"
                                                                            Language="{Binding CodeLanguage}"
                                                                            Height="150"
                                                                            Margin="0,5,0,0"/>
                                            </Grid>
                                            
                                            <!-- Texto normal -->
                                            <TextBlock Text="{Binding ContentPreview}"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="200"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="#E0E0E0"
                                                       FontSize="13">
                                                <TextBlock.IsVisible>
                                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                        <Binding Path="!IsImage"/>
                                                        <Binding Path="!IsUrl"/>
                                                        <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                                            <Binding Path="!IsCode"/>
                                                            <Binding Path="CodeContent" Converter="{x:Static StringConverters.IsNullOrEmpty}"/>
                                                        </MultiBinding>
                                                    </MultiBinding>
                                                </TextBlock.IsVisible>
                                            </TextBlock>
                                            
                                            <!-- URL -->
                                            <Border IsVisible="{Binding IsUrl}"
                                                    Background="#1E3A5F"
                                                    CornerRadius="4"
                                                    Padding="10"
                                                    BorderBrush="#4A90E2"
                                                    BorderThickness="1">
                                                <TextBlock Text="{Binding Url}"
                                                           TextWrapping="Wrap"
                                                           Foreground="#4A90E2"
                                                           FontSize="13"
                                                           TextDecorations="Underline"/>
                                            </Border>
                                            
                                            <!-- Imagen -->
                                            <Border IsVisible="{Binding IsImage}"
                                                    Background="#0D1515"
                                                    CornerRadius="4"
                                                    Padding="5"
                                                    HorizontalAlignment="Left">
                                                <Image Source="{Binding ImageSource}"
                                                       MaxHeight="200"
                                                       MaxWidth="400"
                                                       Stretch="Uniform"/>
                                            </Border>
                                        </Grid>
                                        
                                        <!-- Type Badge -->
                                        <Border Grid.Row="0" Grid.Column="1"
                                                Background="#4A9B9B"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="{Binding ContentType}"
                                                       Foreground="White"
                                                       FontSize="10"/>
                                        </Border>

                                        <!-- Metadata -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Margin="0,5,0,0"
                                                    Spacing="10">
                                            <TextBlock Text="{Binding SourceApp}"
                                                       Foreground="#A0A0A0"
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                                       Foreground="#A0A0A0"
                                                       FontSize="11"/>
                                            <Border IsVisible="{Binding HasOcr}"
                                                    Background="#1E3A1E"
                                                    CornerRadius="3"
                                                    Padding="6,3"
                                                    MaxWidth="400">
                                                <TextBlock Text="{Binding OcrText}"
                                                           Foreground="#4EC9B0"
                                                           FontSize="10"
                                                           MaxHeight="30"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="NoWrap"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Margin="0,5,0,0"
                                                    Spacing="5">
                                            <Button Content="ðŸŒ Abrir"
                                                    FontSize="11"
                                                    Padding="8,4"
                                                    Click="OnOpenUrlClick"
                                                    IsVisible="{Binding IsUrl}"
                                                    Background="#1E3333"
                                                    BorderBrush="#2D4D4D"/>
                                            <Button Content="ðŸ“ Copiar texto"
                                                    FontSize="11"
                                                    Padding="8,4"
                                                    Click="OnCopyOcrTextClick"
                                                    IsVisible="{Binding IsImage}"
                                                    Background="#1E3333"
                                                    BorderBrush="#2D4D4D"/>
                                            <Button Content="ðŸ—‘ï¸"
                                                    FontSize="11"
                                                    Padding="8,4"
                                                    Click="OnDeleteClick"
                                                    Background="#1E3333"
                                                    BorderBrush="#2D4D4D"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#4A9B9B" Padding="8" CornerRadius="0,0,12,12">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="{Binding Items.Count, StringFormat='{}{0} items'}"
                               Foreground="White"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="Esc para cerrar"
                               Foreground="White"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

        </Grid>
    </Border>

</Window>
